@model IEnumerable<RestaurantLaPashtetDeliverySystem.Models.Classification>

@{
    ViewData["Title"] = "Index";
}

<h1>Classification table</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-striped" style="background-color:darkturquoise;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClassificationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClassificationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClassificationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ClassificationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ClassificationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
