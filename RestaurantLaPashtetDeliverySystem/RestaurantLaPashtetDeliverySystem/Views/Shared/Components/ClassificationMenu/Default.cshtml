@model IEnumerable<Classification>

<li class="dropdown">
    <a asp-controller="Food"
       asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">Classifications<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var classification in Model)
        {
            <li>
                <a asp-controller="Food" asp-action="Catalogue"
                   asp-route-classification="@classification.ClassificationName">@classification.ClassificationName</a>
            </li>
        }
        <li class="divider"></li>
        <li>
            <a asp-controller="Food" asp-action="Catalogue" asp-route-Classification="">View all menu</a>
        </li>
    </ul>
</li>